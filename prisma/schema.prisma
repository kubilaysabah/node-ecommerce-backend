// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Address {
  id         String                @id @default(cuid())
  name       String
  street     String
  city       String
  state      String
  country    String
  zip        String
  createdAt  DateTime              @default(now())
  updatedAt  DateTime              @updatedAt
  customerId String?
  customer   CustomersOnAddresses? @relation(fields: [customerId], references: [id])
}

model Customer {
  id        String                 @id @default(cuid())
  image     String
  firstname String
  lastname  String
  email     String
  phone     String
  password  String
  birthdate DateTime?
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt
  gender    String
  addresses CustomersOnAddresses[]
}

model CustomersOnAddresses {
  id         String    @id @default(cuid())
  customerId String
  customer   Customer  @relation(fields: [customerId], references: [id])
  addresses  Address[]
}
