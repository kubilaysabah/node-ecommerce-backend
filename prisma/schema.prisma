// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Banner {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  url         String?
  image       String?
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  image       String?
  Product     Product[]
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Float
  quantity   Int
  image      String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Users {
  id        Int     @id @default(autoincrement())
  firstname String
  lastname  String
  phone     String  @unique
  email     String  @unique
  password  String
  address   String?
}
